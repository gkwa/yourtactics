BIN := {% raw %}{{ cookiecutter.project_slug }}{% endraw %}

SRC := $(wildcard *.go **/*.go)

.PHONY: all tidy fmt lint install clean

all: tidy fmt lint install

.PHONY: tidy
tidy:
	go mod tidy

.PHONY: fmt
fmt:
	gofumpt -w .

.PHONY: lint
lint:
	golangci-lint run

$(BIN): $(SRC)
	go build -o $@ main.go

.PHONY: install
install: $(BIN)
	go install

.PHONY: clean
clean:
	$(RM) $(BIN)
