BIN := {% raw %}{{ cookiecutter.project_slug }}{% endraw %}

SRC := $(wildcard *.go **/*.go)

.DEFAULT_GOAL := all

all: check $(BIN)

.PHONY: check
check: tidy fmt lint vet

.PHONY: build
build: $(BIN)

LDFLAGS = -s -w
LDFLAGS += -X "github.com/{% raw %}{{ cookiecutter.github_username }}{% endraw %}/{% raw %}{{ cookiecutter.project_slug }}{% endraw %}/version.Version={{ "{%" }} raw {{ "%}" }}{{ "{{" }}.Version{{ "}}" }}{{ "{%" }} endraw {{ "%}" }}"
LDFLAGS += -X "github.com/{% raw %}{{ cookiecutter.github_username }}{% endraw %}/{% raw %}{{ cookiecutter.project_slug }}{% endraw %}/version.Date={{ "{%" }} raw {{ "%}" }}{{ "{{" }}.CommitDate{{ "}}" }}{{ "{%" }} endraw {{ "%}" }}"
LDFLAGS += -X "github.com/{% raw %}{{ cookiecutter.github_username }}{% endraw %}/{% raw %}{{ cookiecutter.project_slug }}{% endraw %}/version.GoVersion={{ "{%" }} raw {{ "%}" }}{{ "{{" }}.Env.GOVERSION{{ "}}" }}{{ "{%" }} endraw {{ "%}" }}"
LDFLAGS += -X "github.com/{% raw %}{{ cookiecutter.github_username }}{% endraw %}/{% raw %}{{ cookiecutter.project_slug }}{% endraw %}/version.ShortGitSHA={{ "{%" }} raw {{ "%}" }}{{ "{{" }}.ShortCommit{{ "}}" }}{{ "{%" }} endraw {{ "%}" }}"
LDFLAGS += -X "github.com/{% raw %}{{ cookiecutter.github_username }}{% endraw %}/{% raw %}{{ cookiecutter.project_slug }}{% endraw %}/version.FullGitSHA={{ "{%" }} raw {{ "%}" }}{{ "{{" }}.FullCommit{{ "}}" }}{{ "{%" }} endraw {{ "%}" }}"

$(BIN): $(SRC)
	go build -ldflags "$(LDFLAGS)" -o $@ {% block main_go %}{% endblock %}

.PHONY: tidy
tidy:
	go mod tidy

.PHONY: fmt
fmt:
	gofumpt -w .

.PHONY: lint
lint:
	golangci-lint run

.PHONY: vet
vet:
	go vet ./...

.PHONY: install
install: $(BIN)
	go install

.PHONY: clean
clean:
	$(RM) $(BIN)
